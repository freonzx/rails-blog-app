<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<hr>
<%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %>
<%= link_to "Delete", post_path(@post),
                      method: :delete,
                      data: {confirm: 'You sure?'},
                      class: "btn btn-danger" %>